            VerticalAlignment="Stretch" />
        -->
        <PasswordBox x:Name="password" Grid.Row="0"
                     Width="100"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     TabIndex="1"/>

        <Button Grid.Row="2"
                Click="button_Click"
                Content="Wpf here" />
    </Grid>
</Window>
